{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": ["es2017", "es7", "es6", "dom"], 
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}